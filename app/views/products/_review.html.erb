

<% @product.reviews.each do |rev| %>
  <div class="col-sm-8">
    <dl class="dl-horizontal">
      <dt>Email</dt>
      <dd><%= User.find(rev.user_id).email %></dd>
      <% if rev.description %>
      <dt>Review</dt>
      <dd><%= rev.description %></dd>
      <% end %>
      <% if rev.rating %>
      <dt>Rating</dt>
      <dd><%= rev.rating %></dd>
      <% end %>
    </dl>
  </div>


<% end %>
