<h1>Login</h1>

<section class="sessions-new">

  <header class="page-header">
    <h1>Login</h1>
  </header>


  <div class="well">
    <%= link_to 'Register', :signup, class: 'btn btn-info' %>
  </div>


  <div class="row">
    <div class="col-sm-6 col-sm-offset-1">
      <%= form_tag '/login' do %>
<!-- need to rememeber to add back in error check -->


        <div class="form-group">
          Email <%= text_field_tag :email %>
        </div>
        <div class="form-group">
          Password <%=  password_field_tag :password  %>
        </div>

        <%= submit_tag "Submit", class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>

</section>
